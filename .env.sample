# BLRCS Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
BLRCS_MODE=prod                    # prod, dev, test
BLRCS_APP_NAME=BLRCS              # Application name
BLRCS_VERSION=1.0.0               # Application version
BLRCS_DEBUG=false                  # Debug mode

# Logging
BLRCS_LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR, CRITICAL
BLRCS_LOG_FILE=logs/blrcs.log     # Log file path
BLRCS_LOG_MAX_SIZE=10485760       # Max log file size (10MB)
BLRCS_LOG_BACKUP_COUNT=5          # Number of log backups to keep

# Security
BLRCS_SECRET_KEY=                 # Leave empty to auto-generate
BLRCS_ENABLE_MFA=true            # Multi-factor authentication
BLRCS_SESSION_TIMEOUT=1800       # Session timeout in seconds (30 min)
BLRCS_MAX_LOGIN_ATTEMPTS=5       # Max failed login attempts
BLRCS_BLOCK_DURATION=3600        # IP block duration in seconds (1 hour)
BLRCS_PASSWORD_MIN_LENGTH=8      # Minimum password length
BLRCS_REQUIRE_STRONG_PASSWORD=true

# Database
BLRCS_DB_PATH=data/blrcs.db      # Database file path
BLRCS_DB_POOL_ENABLED=true       # Enable connection pooling
BLRCS_DB_POOL_MIN_SIZE=2         # Minimum pool size
BLRCS_DB_POOL_MAX_SIZE=10        # Maximum pool size
BLRCS_DB_POOL_TIMEOUT=30         # Connection timeout in seconds
BLRCS_DB_BACKUP_ENABLED=true     # Enable automatic backups
BLRCS_DB_BACKUP_INTERVAL=86400   # Backup interval in seconds (24 hours)

# Cache
BLRCS_CACHE_ENABLED=true         # Enable caching
BLRCS_CACHE_SIZE=1000            # Maximum cache entries
BLRCS_CACHE_TTL=300              # Default TTL in seconds (5 min)
BLRCS_CACHE_ALGORITHM=LRU        # Cache algorithm (LRU, LFU, FIFO)

# Network
BLRCS_HOST=127.0.0.1             # Server host
BLRCS_PORT=8080                  # Server port
BLRCS_ENABLE_SSL=false           # Enable SSL/TLS
BLRCS_SSL_CERT_FILE=             # SSL certificate file
BLRCS_SSL_KEY_FILE=              # SSL key file
BLRCS_ENABLE_CORS=true           # Enable CORS
BLRCS_CORS_ORIGINS=http://localhost:3000

# Performance
BLRCS_WORKER_THREADS=4           # Number of worker threads
BLRCS_ASYNC_WORKERS=2            # Number of async workers
BLRCS_REQUEST_TIMEOUT=30         # Request timeout in seconds
BLRCS_MAX_REQUEST_SIZE=10485760  # Max request size (10MB)
BLRCS_ENABLE_COMPRESSION=true    # Enable response compression
BLRCS_COMPRESSION_LEVEL=6        # Compression level (1-9)

# Monitoring
BLRCS_ENABLE_MONITORING=true     # Enable monitoring
BLRCS_METRICS_ENABLED=true       # Enable metrics collection
BLRCS_METRICS_INTERVAL=60        # Metrics collection interval (seconds)
BLRCS_HEALTH_CHECK_ENABLED=true  # Enable health checks
BLRCS_HEALTH_CHECK_INTERVAL=30   # Health check interval (seconds)

# Notifications
BLRCS_ENABLE_NOTIFICATIONS=true  # Enable notifications
BLRCS_EMAIL_ENABLED=false        # Enable email notifications
BLRCS_EMAIL_HOST=                # SMTP host
BLRCS_EMAIL_PORT=587             # SMTP port
BLRCS_EMAIL_USER=                # SMTP username
BLRCS_EMAIL_PASSWORD=            # SMTP password
BLRCS_EMAIL_FROM=                # From email address
BLRCS_EMAIL_USE_TLS=true         # Use TLS for email

# API
BLRCS_API_VERSION=v1             # API version
BLRCS_API_PREFIX=/api            # API URL prefix
BLRCS_API_RATE_LIMIT=100         # Requests per minute
BLRCS_API_KEY_ENABLED=false      # Require API key
BLRCS_API_KEY=                   # API key (if enabled)

# Plugins
BLRCS_PLUGINS_ENABLED=true       # Enable plugin system
BLRCS_PLUGINS_DIR=plugins/       # Plugin directory
BLRCS_PLUGINS_AUTO_LOAD=true     # Auto-load plugins on startup

# Backup
BLRCS_BACKUP_DIR=backups/        # Backup directory
BLRCS_BACKUP_RETENTION_DAYS=30   # Backup retention period
BLRCS_BACKUP_COMPRESSION=true    # Compress backups
BLRCS_BACKUP_ENCRYPTION=false    # Encrypt backups
BLRCS_BACKUP_ENCRYPTION_KEY=     # Encryption key

# Language
BLRCS_DEFAULT_LANG=en            # Default language (en, ja)
BLRCS_SUPPORTED_LANGS=en,ja      # Supported languages

# Development
BLRCS_DEV_MODE=false             # Development mode
BLRCS_DEV_AUTO_RELOAD=false      # Auto-reload on file changes
BLRCS_DEV_PROFILING=false        # Enable profiling
BLRCS_DEV_SQL_ECHO=false         # Echo SQL queries

# Lightning Network (Optional)
BLRCS_LND_ENABLED=false          # Enable Lightning Network
BLRCS_LND_REST_HOST=127.0.0.1    # LND REST host
BLRCS_LND_REST_PORT=8080         # LND REST port
BLRCS_LND_TLS_CERT=              # TLS certificate path
BLRCS_LND_ADMIN_MACAROON=        # Admin macaroon path
BLRCS_LND_NETWORK=mainnet        # Network (mainnet, testnet, regtest)

# Feature Flags
BLRCS_FEATURE_DARK_MODE=true     # Enable dark mode
BLRCS_FEATURE_BETA=false         # Enable beta features
BLRCS_FEATURE_EXPERIMENTAL=false # Enable experimental features